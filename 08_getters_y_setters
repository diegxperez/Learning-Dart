void main(){

    double mySquare = new Square ( side: 10 );

    mySquare.side = 15;

    print(mySquare.area);

}

class Square{

    double _side;

    Square ({required this.side}) :
    _side = side;

    double get area {
        return _side * _side;
    }

    double set side (double value) {
        print (value);
    if ( value <= 0 ) throw 'El valor es incorrecto, ingrese un numero mayor a 0';

    _side = value;

    } 
}




void main(){
  
  final miCuadrado = new Cuadrado ( lado : 10 );
  
  print(' El area es: ${miCuadrado.area}');
}


class Cuadrado {
  
  double lado;
  
  
  Cuadrado ({required this.lado});
  
  double get area {
    return lado * lado;
  }
  
  
}